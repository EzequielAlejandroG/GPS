extends ../layout.pug
block contenido
  #page-wrapper
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Registrar conductores
          .panel-body
            #aviso
            form(action="/drivers/new",method="POST",role='form',id="formNew")
              fieldset
                .form-group
                  h5  Nombre(s)
                  input.form-control(type="text" name="nombre" placeholder="nombre", id="nom" required)
                .form-group
                  h5  Apellido(s)
                  input.form-control(type="text" name="apellidos" placeholder="apellidos", id="ape" required)
                .form-group
                  h5  CURP
                  input.form-control(type="text" name="curp" placeholder="curp", id="curp" required)
                .form-group
                  h5  Dirección
                  input.form-control(type="text" name="direccion" placeholder="direccion", id="dir" required)
                .form-group
                  h5  Categoria
                  input.form-control(type="text" name="categoria" placeholder="categoria", id="cat" required)
                .form-group
                  h5  Base
                  input.form-control(type="text" name="base" placeholder="base", id="bas" required)
                .form-group
                  h5  N° de Licencia
                  input.form-control(type="text" name="numeroLicencia" placeholder="numeroLicencia", id="lis" required)
                if usuario.permisos === 2
                  .form-group
                    h5  Tipo de Licencia:
                    select.form-control.selectpicker(name="nombre", data-live-search="true")
                      for conductor in conductores
                        option(name="1") #{conductor.nombre}
                .form-group
                  h5  Expedición
                  input.form-control(type="date" name="expedicion" placeholder="expedicion", id="exp" required)
                .form-group
                  h5  Vigencia
                  input.form-control(type="date" name="vigencia" placeholder="vigencia", id="vig" required) 
                .form-group
                  h5  Nacionalidad
                  input.form-control(type="text" name="nacionalidad" placeholder="nacionalidad", id="nac" required)  
                .form-group
                  h5  N° Seguro
                  input.form-control(type="text" name="numeroSeguro" placeholder="numeroSeguro", id="seg" required)        
                .form-group
                  h5  Fecha de Ingreso a la compañia
                  input.form-control(type="date" name="fechaIngreso" placeholder="fechaIngreso", id="fec" required)
                .form-group
                  h5  Usuario
                  input.form-control(type="text" name="idUsuario" placeholder="idUsuario", id="user" required)             
                .form-group
                input(type="submit" value="Agregar cliente" class="btn btn-lg btn-primary btn-block")
  // jQuery
  script(src='/public/vendor/jquery/jquery.min.js')
  // Bootstrap Core JavaScript
  script(src='/public/vendor/bootstrap/js/bootstrap.min.js')
  // Metis Menu Plugin JavaScript
  script(src='/public/vendor/metisMenu/metisMenu.min.js')
  // Custom Theme JavaScript
  script(src='/public/dist/js/sb-admin-2.js')
  script(src='/public/dist/js/bootstrap-select.min.js')
