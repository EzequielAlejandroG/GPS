extends ../layout.pug
block contenido
  #page-wrapper
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Actualizar datos de los conductores
          .panel-body
            #aviso
            form(action="/drivers/"+driverUpdate.idConductor+"?_method=PUT",method="POST", id="formUpdate")
              fieldset
                .form-group
                  h5  Nombre(s) :
                  input.form-control(type="text", name="nombre", value=driverUpdate.nombre, id="nom" required)
                .form-group
                  h5  Apellido(s):
                  input.form-control(type="text", name="apellidos", value=driverUpdate.apellidos, id="ape" required)
                .form-group
                  h5  CURP:
                  input.form-control(type="text", name="curp", value=driverUpdate.curp, id="curp" required)
                .form-group
                  h5  Direccion:
                  input.form-control(type="text", name="direccion", value=driverUpdate.direccion, id="dir" required)
                .form-group
                  h5  Categoria:
                  input.form-control(type="text", name="categoria", value=driverUpdate.categoria, id="cat" required)
                .form-group
                  h5  Base:
                  input.form-control(type="text", name="base", value=driverUpdate.base, id="bas" required)
                .form-group
                  h5  N°.Licencia:
                  input.form-control(type="text", name="numeroLicencia", value=driverUpdate.numeroLicencia, id="lis" required) 
                .form-group
                  h5  Sucursal:
                    select.form-control(name="plaza")
                      option #{tecnicaUpdate.plaza}
                      for sucursal in sucursales
                        if sucursal.plaza != tecnicaUpdate.plaza
                          option #{sucursal.plaza}
                .form-group
                  h5  Expedicion de la licencia:
                  input.form-control(type="text", name="expedicion", value=driverUpdate.expedicion, id="exp" required)
                .form-group
                  h5  Vigencia de la licencia:
                  input.form-control(type="text", name="vigencia", value=driverUpdate.vigencia, id="vig" required)
                .form-group
                  h5  Nacionalidad:
                  input.form-control(type="text", name="nacionalidad", value=driverUpdate.nacionalidad, id="nac" required)
                .form-group
                  h5  N° de Seguro:
                  input.form-control(type="text", name="numeroSeguro", value=driverUpdate.numeroSeguro, id="seg" required) 
                .form-group
                  h5  Fecha de ingreso a la compania:
                  input.form-control(type="text", name="fechaIngreso", value=driverUpdate.fechaIngreso, id="fec" required)
                .form-group
                  h5  Usuario:
                  input.form-control(type="text", name="idUsuario", value=driverUpdate.idUsuario, id="user" required)                
                // boton para registrar
                .form-group
                input(type="submit" value="Actualizar" class="btn btn-lg btn-primary btn-block")

  // jQuery
  script(src='/public/vendor/jquery/jquery.min.js')
  // Bootstrap Core JavaScript
  script(src='/public/vendor/bootstrap/js/bootstrap.min.js')
  // Metis Menu Plugin JavaScript
  script(src='/public/vendor/metisMenu/metisMenu.min.js')
  // Custom Theme JavaScript
  script(src='/public/dist/js/sb-admin-2.js')
  script(src='/public/dist/js/bootstrap-select.min.js')
