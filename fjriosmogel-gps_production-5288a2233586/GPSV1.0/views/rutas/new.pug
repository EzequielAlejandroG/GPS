extends ../layout.pug
block contenido
  #page-wrapper
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Registrar nueva ruta
          .panel-body
            form(action="/rutas/new",method="POST",role='form')
              fieldset
                .form-group
                  h5  vehiculo:
                  input.form-control(type="text", name="idVehiculo", placeholder="Vehiculo" required)
                .form-group
                 h5  noEconomico:
                  input.form-control(type="text", name="noEconomico", placeholder="numero economico" required)
                .form-group
                  h5  Remolque:
                  input.form-control(type="text", name="idRemolque", placeholder="Remolque" required)
                .form-group
                  h5  Salida:
                  input.form-control(type="text", name="salida", placeholder="Salida" required)
                .form-group
                  h5  Destino:
                  input.form-control(type="text", name="destino", placeholder="Destino" required)
                .form-group
                  h5  Conductor:
                  input.form-control(type="text", name="idConductor", placeholder="Conductor" required)
                .form-group
                  h5  fecha de Salida:
                  input.form-control(type="datetime-local", name="fechaSalida", placeholder="Fecha de Salida" required)
                .form-group
                  h5  fecha de llegada:
                  input.form-control(type="datetime-local", name="fechaLlegada", placeholder="Fecha de Llegada" required)
                .form-group
                  h5  Tiempo estimado:
                  input.form-control(type="text", name="tiempoEstimado", placeholder="Tiempo estimado" required)                                                 
                .form-group
                  h5  Prioridad:
                  input.form-control(type="text", name="idPrioridad", placeholder="Prioridad" required)
                .form-group
                  h5  Status:
                  input.form-control(type="text", name="idEstado", placeholder="Status" required)                    
                // boton para registrar
                .form-group
                input(type="submit" value="Registrar" class="btn btn-lg btn-primary btn-block")
  // jQuery
  script(src='/public/vendor/jquery/jquery.min.js')
  // Bootstrap Core JavaScript
  script(src='/public/vendor/bootstrap/js/bootstrap.min.js')
  // Metis Menu Plugin JavaScript
  script(src='/public/vendor/metisMenu/metisMenu.min.js')
  // Custom Theme JavaScript
  script(src='/public/dist/js/sb-admin-2.js')
  script(src='/public/dist/js/bootstrap-select.min.js')
