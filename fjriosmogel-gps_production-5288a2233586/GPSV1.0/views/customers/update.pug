extends ../layout.pug
block contenido
  #page-wrapper
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Actualizar datos de los clientes
          .panel-body
            #aviso
            form(action="/customers/"+customerUpdate.idCliente+"?_method=PUT",method="POST", id="formUpdate")
              fieldset
                .form-group
                  h5  Raz√≥n social :
                  input.form-control(type="text", name="razonSocial", value=customerUpdate.razonSocial, id="raz" required)
                .form-group
                  h5  RFC:
                  input.form-control(type="text", name="rfc", value=customerUpdate.rfc, id="rfc" required)
                .form-group
                  h5  Domicilo fiscal:
                  input.form-control(type="text", name="domicilioFiscal", value=customerUpdate.domicilioFiscal, id="domf" required)
                .form-group
                  h5  Estado:
                  input.form-control(type="text", name="status", value=customerUpdate.status, id="stat" required)
                .form-group
                  h5  Usuario:
                  input.form-control(type="text", name="idUsuario", value=customerUpdate.idUsuario, id="user" required)  
                // boton para registrar
                .form-group
                input(type="submit" value="Actualizar" class="btn btn-lg btn-primary btn-block")

  // jQuery
  script(src='/public/vendor/jquery/jquery.min.js')
  // Bootstrap Core JavaScript
  script(src='/public/vendor/bootstrap/js/bootstrap.min.js')
  // Metis Menu Plugin JavaScript
  script(src='/public/vendor/metisMenu/metisMenu.min.js')
  // Custom Theme JavaScript
  script(src='/public/dist/js/sb-admin-2.js')
  script(src='/public/avisos/clienteUpdate.js')
