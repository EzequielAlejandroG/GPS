<div class="container p-5">
    <div class="row">
      <div class="col-md-5 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Operadores</h3>
        </div>
            <div class="card">
                <div class="card-body">

                    <form action="/operador/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="id_operador" class="form-control" placeholder="numero identificador del operador" autofocus requerid>
                        </div>

                      <div class="form-group">
                            <input type="text" name="nombre" class="form-control" placeholder="nombre completo" autofocus requerid>
                        </div>

                        <div class="form-group">
                        <label for="categoria">Categoria: </label>
                        <select name="categoria" id="categoria"></select>
                        </div>

                        <div class="form-group">
                        <label for="base">Base: </label>
                        <select name="base" id="base"></select>
                        </div>

                        <div class="form-group">
                        <label for="tipo_licencia">tipo de licencia: </label>
                        <select name="tipo_licencia" id="tipo_licencia"></select>
                        </div>

                        <div class="form-group">
                            <label>Vigencia de la licencia</label>
                            <input type="date" name="vigencia" class="form-control" placeholder="vigencia" autofocus requerid>
                        </div>

                        <div class="form-group">
                            <input type="text" name="numero_seguro" class="form-control" placeholder="numero de seguro" autofocus requerid>
                        </div>

                         <div class="form-group">
                            <label>Fecha de ingreso</label>
                            <input type="date" name="fecha_ingreso" class="form-control" placeholder="fecha de ingreso" autofocus requerid>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block"><i class="fas fas fa-save"></i>
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
                         <div class="card">
                <div class="card-body">    
                        <div class="form-group">
                            <a href="/operador" class="btn btn-light btn-block"><i class="fas fa-undo-alt"></i>
                                close
                            </a>
                        </div>                          
                </div>
            </div>
        </div>
    </div>
</div>