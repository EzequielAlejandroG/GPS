<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/ubicacion/edit/{{ubicacion.idVehiculo}}" method="POST">
                <div class="form-group">
                    <input type="text" name="placa" class="form-control" placeholder="placa" value="{{ubicacion.placa}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="latitud" class="form-control" placeholder="latitud" value="{{ubicacion.latitud}}">
                </div>
                <div class="form-group">
                    <input type="text" name="longitud" class="form-control" placeholder="longitud" value="{{ubicacion.longitud}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>