
<div class="container p-4">    
<div class="col-md-5">
      <div class="card-body">
      <table>
      <tr>
      <td>
        <a class="btn btn-success" href="/licencia/add"><i class="fas fa-plus"></i>
        Nuevo
        </a>
      </td>
      <td>
        <input class="form-control" data-table="order-table" type="text" placeholder="Search..">
      </td>
      </tr>
      </table>
      </div> 
    </div>

<div class="container mt-4">
<table class="table table table-hover" border=0>
  <thead>
    <tr align="center">
      <th scope="col">id</th>
      <th scope="col">tipo</th>
      <th scope="col">descripcion</th>
      <th colspan="2">action</th>
    </tr>
  </thead>
  {{#each licencia}}
  <tbody>
    <tr>
                    <td align="center">{{id}}</td>
                    <td align="center">{{tipo}}</td>
                    <td align="justify">{{descripcion}}</td>
                    <td align="center"><a class="btn btn-danger" href="/licencia/delete/{{id}}"><i class="fas fa-times-circle"></i>
                        Delete
                    </a></td>
                    <td align="center"><a class="btn btn-secondary" href="/licencia/edit/{{id}}"><i class="fas fa-pencil-alt"></i>
                        Edit
                    </a></td>
    </tr>
   </tbody>
   {{else}}

        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not license saved yet.</p>
                <a href="/licencia/add">Create One!</a>
            </div>
        </div>
        {{/each}}
</table>
    </div>
</div>
</div>