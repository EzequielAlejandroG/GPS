      <div class="card text-center">
        <div class="card-header">
          <h3>Edit License</h3>
        </div>
        

    <div class="card">
        <div class="card-body">
            <form action="/licencia/edit/{{licencia.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="tipo" class="form-control" placeholder="tipo de licencia" value="{{licencia.tipo}}" autofocus>
                </div>
                 <div class="form-group">
                    <textarea name="descripcion" rows="10" cols="40" class="form-control" placeholder="Descripcion">{{licencia.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block"><i class="fas fas fa-save"></i>
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
