<div class="col-md-5 mx-auto">
<div class="container p-5">
    <div class="row">
      <div class="col-md-11 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Edit Client</h3>
        </div>
        
    <div class="card">
        <div class="card-body">
            <form action="/cliente/edit/{{cliente.idcliente}}" method="POST">
                <div class="form-group">
                    <input type="text" name="idcliente" class="form-control" placeholder="idcliente" value="{{cliente.idcliente}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="razonsocial" class="form-control" placeholder="razonsocial" value="{{cliente.razonsocial}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="rfc" class="form-control" minlength="12" maxlength="12" placeholder="RFC" value="{{cliente.rfc}}" autofocus>
                </div>
                 <div class="form-group">
                    <textarea name="domicilio_fiscal" rows="10" cols="40" class="form-control" placeholder="domicilio">{{cliente.domicilio_fiscal}}</textarea>
                </div>
                <div class="form-group">
                    <input type="number" name="status" class="form-control" placeholder="status" value="{{cliente.status}}" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block"><i class="fas fas fa-save"></i>
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
                 <div class="card">
                <div class="card-body">    
                        <div class="form-group">
                            <a href="/cliente" class="btn btn-light btn-block"><i class="fas fa-undo-alt"></i>
                                close
                            </a>
                        </div>                          
                </div>
            </div>
</div>