
<div class="container p-4">    
<div class="col-md-5">
      <div class="card-body">
      <table>
      <tr>
      <td>
        <a class="btn btn-success" href="/signup"><i class="fas fa-plus"></i>
        Nuevo
        </a>
      </td>
      <td>
        <input class="form-control" data-table="order-table" type="text" placeholder="Search..">
      </td>
      </tr>
      </table>
      </div> 
    </div>


<div class="container-fluid">
<table class="table table table-hover" border=0>
  <thead>
    <tr align="center">
      <th scope="col">id</th>
      <th scope="col">username</th>
      <th scope="col">fullname</th>
      <th scope="col">email</th>
      <th scope="col">is_active</th>
      <th colspan="2">action</th>
    </tr>
  </thead>
  {{#each users}}
  <tbody>
    <tr align="center">
                    <td>{{id}}</td>
                    <td>{{username}}</td>
                    <td>{{fullname}}</td>
                    <td>{{email}}</td>
                    <td>{{is_active}}</td>
                    <td><a class="btn btn-danger" href="/users/delete/{{id}}"><i class="fas fa-times-circle"></i>
                        Delete
                    </a>
                    
                   <a class="btn btn-secondary" href="/users/edit/{{id}}"><i class="fas fa-pencil-alt"></i>
                        Edit
                    </a></td>
    </tr>
   </tbody>
   {{else}}

        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not Users saved yet.</p>
                <a href="/users/add">Create One!</a>
            </div>
        </div>
        {{/each}}
</table>

    </div>
</div>
</div>