<div class="col-md-5 mx-auto">
<div class="container p-5">
    <div class="row">
      <div class="col-md-11 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Edit user</h3>
        </div>
        
    <div class="card">
        <div class="card-body">
            <form action="/users/edit/{{users.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="id" class="form-control" placeholder="id usuario" value="{{users.id}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="username" class="form-control" placeholder="user name" value="{{users.username}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" minlength="8"  placeholder="password" value="{{users.password}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="fullname" class="form-control" placeholder="full name" value="{{users.fullname}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" placeholder="email" value="{{users.email}}" autofocus>
                </div>
                <div class="form-group">
                     <input type="file" name="profile_pic" placeholder="Imagen" class="form-control" >
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                            <select class="form-control" required name="is_active">
                                    <option value="" selected>-- Selecciona status --</option>
                                    <option value="1" >Activo</option>
                                    <option value="0" >Inactivo</option>  
                            </select>
                        </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block"><i class="fas fas fa-save"></i>
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
                 <div class="card">
                <div class="card-body">    
                        <div class="form-group">
                            <a href="/users" class="btn btn-light btn-block"><i class="fas fa-undo-alt"></i>
                                close
                            </a>
                        </div>                          
                </div>
            </div>
</div>